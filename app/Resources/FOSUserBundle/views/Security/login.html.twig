{% extends "::external.html.twig" %}

{% block title %}Login &ndash; {{ parent() }}{% endblock %}

{% block innerBody %}

    {% block header %}
        {{ parent() }}
    {% endblock %}

    {% block content %}

        <div class="jumbotron">
            <h1>Your Great Opportunity</h1>
            <p class="lead"></p>
            <p><a class="btn btn-lg btn-success" href="{{ path('fos_user_registration_register') }}" role="button">Sign up today</a></p>
        </div>

        <div class="row marketing">
            <div class="col-lg-12 col-xs-3 col-md-6">

                <div class="panel panel-default">
                    <div class="panel-heading">Sign in</div>

                    {% if error %}
                        <div class="alert alert-danger" role="alert">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <div class="panel-body">
                        <form class="form-horizontal" role="form" action="{{ path("fos_user_security_check") }}" method="post">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                            <div class="form-group">
                                <input type="text" id="username" name="_username" placeholder="email" value="{{ last_username }}" required="required" />
                                <input type="password" id="password" name="_password" placeholder="password" required="required" />

                                <label for="remember_me">
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> Rember me
                                </label>
                            </div>

                            <div class="form-group">
                                <a href="{{ path('fos_user_resetting_request') }}">Forgot your password?</a>
                                <input type="submit" id="_submit" name="_submit" value="Login" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

    {% block footer %}
        {{ parent() }}
    {% endblock %}

{% endblock %}
